@model StudentData 



@{
    ViewData["Title"] = "Create";
}
<div class="row pb-1 mt-2">
    <h2 class="text-primary">Create Student</h2>
    <hr />
</div>
<form method="post" enctype="multipart/form-data">
    <div class="border p-2 mt-1">
        <div class="form-group">
            <label asp-for="FirstName" class="inline">First name</label>
            <input asp-for="FirstName" class="form-control p-1" />
            <span asp-validation-for="FirstName" class="text-danger small"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName">Lastname</label>
            <input asp-for="LastName" class="form-control p-1" />
            <span asp-validation-for="LastName" class="text-danger small"></span>
        </div>
        <div class="form-group">
            <label asp-for="Course">Course</label>
            <select asp-for="Course" class="form-control p-1">
                <option value="">Choose Course</option>
                <option value="MCA">MCA</option>
                <option value="BCA">BCA</option>
                <option value="BCA">B.TECH</option>
                <option value="BCA">M.TECH</option>
            </select>
            <span asp-validation-for="Course" class="text-danger small"></span>
        </div>
        <div class="form-group">
            <label asp-for="Gender">Gender</label>
            <select asp-for="Gender" class="form-control p-1">
                <option value="">Choose Gender</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger small"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" type="email" class="form-control p-1" />
            <span asp-validation-for="Email" class="text-danger small"></span>
        </div>
        <div class="form-group">
            <label asp-for="Phone">Phone</label>
            <input asp-for="Phone" class="form-control p-1" />
            <span asp-validation-for="Phone" class="text-danger small"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" class="form-control p-1" />
            <span asp-validation-for="Password" class="text-danger small"></span>
        </div>

        @* Taking image from user *@

        <div class="form-group">
            <label asp-for="Image">Choose an image:</label>
            <input asp-for="Image" type="file" class="form-control-file" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Create</button>
        <a asp-controller="StudentData" asp-action="Index" class="btn btn-light float-end mt-2">List Student</a>
    </div>
</form>

